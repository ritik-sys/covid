          <div class="col-lg-6 col-md-6 col-sm-8">
            <h3 style="margin-top:3%;text-align:center;">District Wise Distribution</h3>
            <div class="card" style="width:auto;height:550px;border-left:5px solid #e74a3b;" >
                <table class="table table-striped table-responsive table-bordered">
                    <thead>
                      <tr>
                        <th scope="col">District</th>
                        <th scope="col">Confirmed</th>
                        <th scope="col">Active</th>
                        <th scope="col">Recovered</th>
                        <th scope="col">Deceased</th>
                      </tr>
                    </thead>
                    <tbody>
                    <%  districts.districtData.forEach(function(district){%>
                        <tr>
                          <td><%=district.district%></td>
                          <td><%=district.confirmed%></td>
                          <td><%=district.active%></td>
                          <td><%=district.recovered%></td>
                          <td><%=district.deceased%></td>
                        </tr>
                    <%  })%>
